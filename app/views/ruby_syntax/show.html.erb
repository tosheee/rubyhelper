<div class="main-content" xmlns="http://www.w3.org/1999/html">
  <div>
    <%= image_tag("ruby_logo.gif", :alt => "alabala") %>
  </div>

  <div class="nav-vertical">
    <%= render 'nav_vertical'%>
  </div>

  <div class="central-main-content">
    <p id="notice"><%= notice %></p>

    <h2><strong><%= @syntax_elements_ruby.element %></strong></h2>

    <% @syntax_keyword_rubies.each do |keyword| %>
        <details>
            <summary><%= keyword.last %></summary>
          <% @description_keyword.each do |description_key| %>

              <% if keyword.first == description_key.syntax_keyword_rubies_id %>

                  <% if (!description_key.description_title.empty?) %>
                    <h4><%= description_key.description_title %></h4>
                  <% end %>

                  <% if (!description_key.description.empty?) %>
                      <p><%= description_key.description %></p>
                  <% end %>

                  <% if (!description_key.description.empty?) %>
                    <h4><%= description_key.code_title%></h4>
                  <% end %>

                  <% if (!description_key.code.empty?) %>
                      <pre><%= description_key.code %></pre>
                  <% end %>

              <% end %>
          <% end %>
        </details>
    <% end %>

  </div>

</div>
